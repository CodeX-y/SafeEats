<div>
  <div>
    <h1>
      List of all user diets
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user diet
    </h2>

    <form action="/insert_user_diet" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="diet_id_box">
          Diet
        </label>

        <input type="text" id="diet_id_box" name="query_diet_id">
      </div>

      <button>
        Create user diet
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Diet
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_user_diets.each do |a_user_diet| %>
      <tr>
        <td>
          <%= a_user_diet.id %>
        </td>

        <td>
          <%= a_user_diet.user_id %>
        </td>

        <td>
          <%= a_user_diet.diet_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_user_diet.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user_diet.updated_at) %> ago
        </td>

        <td>
          <a href="/user_diets/<%= a_user_diet.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
